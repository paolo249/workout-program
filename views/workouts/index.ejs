<table id = "list">
    
            <h1> All Workouts </h1>
    <tbody> 
        <% workouts.forEach(function(w) { %>
            <tr action="/workouts">
                <td>  <form
                    action="/workouts/<%= w.id %>?_method=DELETE"
                    method="POST"
                    class="delete-form"
                  >
                    <button type="submit">X</button>
                  </form> </td>
                  <td> <form action="/workouts/<%= w._id %>/edit"> <button type="submit"> edit </button> </form></td>
               <!-- <td>  <%= user.name %></td> -->
              <td><%= w.nameWorkout %></td>
              <td><%= w.scheduleYear %></td>
              <td><a href="/workouts/<%= w._id %>">DETAILS</a></td> 
            </tr>
        <% }); %>
    </tbody>
</table>
